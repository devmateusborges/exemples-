{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@models/*": ["models/*"],
      "@utils/*": ["utils/*"],
      "@entities/*": ["entities/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
